---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import Badge from '../components/Badge.astro'
import LinkedInIcon from '../icons/LinkedIn.astro'
import SocialPill from '../components/SocialPill.astro'
import GitHubIcon from '../icons/GitHub.astro'
import MailIcon from '../icons/Mail.astro'
import Experience from '../components/Experience.astro'
import SectionContainer from '../components/SectionContainer.astro'
import Briefcase from '../icons/Briefcase.astro'
import CodeIcon from '../icons/Code.astro'
import Projects from '../components/Projects.astro'
---

<Layout
  title="Portfolio de Frank Santos - Desarrollador y programador web y móvil con 2 años de experiencia"
  description="Contrata a Frank Santos para crear tu aplicación web o móvil. Desarrollador web y móvil especializado en la creación de aplicaciones únicas."
>
  <main class="px-4">
    <SectionContainer class="py-44 pb-24">
      <img
        class="rounded-full size-12 mb-4"
        src="https://avatars.githubusercontent.com/u/77626612?s=400&u=a449f2af4deca41360245fea5384331c370ca18c&v=4"
        alt="Harurin photo"
      />
      <h1 class="text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row gap-x-4 pb-6 lg:pb-10">
        Hey, soy Frank Santos<a
          class="flex justify-center items-center"
          href="https://www.linkedin.com/in/frank-santos-80a84015b"
          target="_blank"
          rel="noopener"><Badge>Disponible para trabajar</Badge></a
        >
      </h1>
      <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px]">
        <span>2 años de experiencia.</span>
        <span class="text-yellow-200/90">Desarrolador Web, Móvil.</span>
        <span class="text-red-200/90">De Lima, Perú.</span><span
          class="opacity-75"
        >
        Especializado en el desarrollo de app móviles y páginas web.</span
        >
      </h2>
      <nav class="flex gap-4 mt-8 flex-wrap">
        <SocialPill href="https://www.linkedin.com/in/frank-santos-80a84015b">
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn</SocialPill
        >
        <SocialPill href="https://github.com/Harurin5671/Harurin5671">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub</SocialPill
        >
        <SocialPill href="mailto:frankcito639@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          frankcito639@gmail.com</SocialPill
        >
      </nav>
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <Briefcase class="size-7"/>
        Experiencia Laboral
      </h2>
      <Experience />
    </SectionContainer>

    <SectionContainer id="experiencia">
      <h2 class="text-2xl font-semibold mb-6 flex gap-x-3 items-center">
        <CodeIcon class="size-7"/>
        Proyectos
      </h2>
      <Projects />
    </SectionContainer>
  </main>
</Layout>
